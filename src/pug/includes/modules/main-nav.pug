mixin main-nav(className)
  nav.main-nav(class=className)
      ul.main-nav__list
        li.main-nav__item
          a.clr-black.main-nav__link(href=`#`) Физическим лицам
          .bg-white.main-nav__content
            a.clr-black.main-nav__link(href=`#`) Физическим лицам

            .main-nav__block
              ul.main-nav__sublist
                li.main-nav__subitem
                  a.clr-black.main-nav__sublink(href=`#`) Паевые фонды
                li.main-nav__subitem
                  a.clr-black.main-nav__sublink(href=`#`) ИИС
                li.main-nav__subitem
                  a.clr-black.main-nav__sublink(href=`#`) СМАРТ

              h4.clr-text.main-nav__subtitle Для крупных капиталов
              ul.main-nav__sublist
                li.main-nav__subitem
                  a.clr-black.main-nav__sublink(href=`#`) Доверительное управление
                li.main-nav__subitem
                  a.clr-black.main-nav__sublink(href=`#`) Семейные фонды

            .main-nav__info.bg-l-grey
              h4.clr-text.main-nav__subtitle Полезная информация
              ul.main-nav__sublist
