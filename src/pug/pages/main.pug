block content
  +header

  main.page
    section.banners.bg-l-grey
      +slider-top(`banners__slider clr-green`, sliders.banners)

    section.products.bg-l-grey
      header.products__header
        p.clr-red.t-l-title.products__caption Посмотрите наши
        h2.t-h2.products__title Актуальные продукты

      +slider-main(`products__slider`, sliders.products)

      footer.products__footer
        +btn({
          btnText: `Все ПИФы`,
          btnClass: `btn--fill btn--black products__btn`,
        })
        a.clr-black.t-l-title.t-tdn.products__link(href=`#`) Подробнее о ПИФах
          +picture(`products__link-arrow`, {
            isSVG: true,
            svgName: `i-arrow`,
          })
        a.clr-black.t-l-title.t-tdn.products__link(href=`#`) Как купить пай?
          +picture(`products__link-arrow`, {
            isSVG: true,
            svgName: `i-arrow`,
          })

    section.investments
      header.investments__header
        h2.t-h2.investments__title Зачем инвестировать?
        .investments__text
          p.t-middle В паевые фонды облигаций можно вкладывать деньги не разбираясь в инвестициях. Такие фонды отлично подходят для начинающих инвесторов.
          p.t-middle Материалы из данного раздела помогут вам лучше разобраться в продуктах управляющей компании и сделать правильный выбор.
      .investments__slider.slider-main.swiper-container
        .swiper-wrapper
          if sliders.investments.slides.length
            each slide in sliders.investments.slides
              .investments__slide.slider-main__slide.swiper-slide(class=slide.className)
                +picture(``, slide.image)
                h4.investments__slide-title= slide.title
                p.investments__slide-text= slide.text
                +btn(slide.btn)

    +advantages(advantages)

    section.news
      header.news__header
        p.clr-red.t-l-title.news__caption Самые свежие
        h2.t-h2.news__title Новости и публикации

        if sliders.news.arrows
          +slider-arrows({
            classNames: [sliders.news.arrows.className, `news__arrows clr-green`],
            btns: [{
              btnText: ``,
              btnClass: `btn--fill btn--big slider-arrows__arrow slider-arrows__arrow--prev`,
            }, {
              btnText: ``,
              btnClass: `btn--fill btn--big slider-arrows__arrow slider-arrows__arrow--next`,
            }],
          })

      .news__slider.slider-main.swiper-container
        .swiper-wrapper
          if sliders.news.slides.length
            each slide in sliders.news.slides
              .news__slide.slider-main__slide.swiper-slide
                +article(slide)

      +btn({
        btnText: `Все новости`,
          btnClass: `btn--fill btn--black news__btn`,
      })

  +footer
